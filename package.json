{
  "name": "streamfinity",
  "version": "1.0.0",
  "description": "StreamFinity - Unified Multi-Platform Live Streaming Solution combining StreamFinity + StreamTory + StreamControl + StreamerBot",
  "main": "main.js",
  "homepage": "https://streamfinity.app",
  "author": "StreamFinity Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder --publish=always",
    "install-deps": "npm install && electron-builder install-app-deps"
  },
  "keywords": [
    "streamfinity",
    "streamtory",
    "streamcontrol",
    "streamerbot",
    "tiktok",
    "live",
    "streaming",
    "overlay",
    "broadcast",
    "pro",
    "multi-platform",
    "unified"
  ],
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^1.5.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-squirrel-startup": "^1.0.0",
    "lodash": "^4.17.21",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "semver": "^7.5.4",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.streamfinity.app",
    "productName": "StreamFinity",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "config.json",
      "package.json",
      "src/**/*",
      "assets/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/Cache/**/*",
      "!**/GPUCache/**/*",
      "!**/Code Cache/**/*",
      "!**/blob_storage/**/*",
      "!**/lockfile"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/streamfinity.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "StreamFinity Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "StreamFinity",
      "include": "build/installer.nsh"
    },
    "portable": {
      "artifactName": "StreamFinity-Portable-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "streamfinity",
      "repo": "streamfinity"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/streamfinity/streamfinity.git"
  },
  "bugs": {
    "url": "https://github.com/streamfinity/streamfinity/issues"
  },
  "streamfinity": {
    "platforms": {
      "streamfinity": {
        "name": "StreamFinity",
        "module": "src/platforms/StreamFinity.js",
        "enabled": true
      },
      "streamtory": {
        "name": "StreamTory",
        "module": "src/platforms/StreamTory.js",
        "enabled": true
      },
      "streamcontrol": {
        "name": "StreamControl",
        "module": "src/platforms/StreamControl.js",
        "enabled": true
      },
      "streamerbot": {
        "name": "StreamerBot",
        "module": "src/platforms/StreamerBot.js",
        "enabled": true
      }
    },
    "features": {
      "unified_api": true,
      "cross_platform_sync": true,
      "shared_state": true,
      "unified_ui": true,
      "pro_mode": true,
      "lifetime_license": true
    }
  }
}
